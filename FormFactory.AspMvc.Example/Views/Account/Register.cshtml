@using FormFactory
@using FormFactory.AspMvc
@using FormFactory.Example.Controllers
@using FormFactory.Example.Models

@{
    ViewBag.Title = "Register";
}

<h2>Create a New Account</h2>
<p>
    Use the form below to create a new account. 
</p>

@using(var form = Html.FormForAction((AccountController ctlr, RegisterModel model, string s) => ctlr.Register(model, s)))
{
    form.AdditionalClasses = "form-horizontal";
    form.Inputs.Single(x => x.Name == "model.AgeRange").Choices = new[] {"< 18 years", "18 - 30", "30+"};
    form.Render();
}