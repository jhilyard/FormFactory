@using FormFactory
@using FormFactory.AspMvc
@using FormFactory.Example.Controllers
@using FormFactory.Example.Models
@{
    ViewBag.Title = "Log in";
}

<h2>Log in</h2>

@using(var form = Html.FormForAction((AccountController ctlr, LogInModel model, string s) => ctlr.LogIn(model, s)))
{
    form.RenderAntiForgeryToken = true;
    form.AdditionalClasses = "form-inline";
    //form.UseHttps = true;
    form.Render();
}